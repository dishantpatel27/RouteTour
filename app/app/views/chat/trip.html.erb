<!doctype html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 80%; margin-right: .5%; }
      form button { width: 19%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
      #messages { margin-bottom: 40px }
    </style>
  </head>
  <body>
    <div style="width: 100%;">
    <div style="float:left; width: 35%">
        <ul id="messages"></ul>
        <form action="" style="opacity:0.9" >
        <input id="m" autocomplete="off" /><button>Send</button>
        </form>
        <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
        <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
        <script>
        $(function () {
            var socket = io("http://localhost:8080");

            $.urlParam = function(name){
                var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
                return results[1] || 0;
            }
            let username = decodeURIComponent($.urlParam('name'));

            $('form').submit(function(){
            socket.emit('chat message',<%= params[:tripid] %>, $.urlParam('name'), $('#m').val());
            $('#m').val('');
            return false;
            });
            socket.on('chat message', function(tripid, username, msg){
            $('#messages').append($('<li>').text(decodeURIComponent(username) +' planning trip ' + tripid + ':  ' + msg));
            window.scrollTo(0, document.body.scrollHeight);
            });
        });
        </script>
    </div>
